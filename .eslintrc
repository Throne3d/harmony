extends: "eslint:recommended"
parserOptions:
  ecmaVersion: 8
env:
  node: true
  mocha: true
  es6: true
rules:
  camelcase:
    - 2
    - properties: "never"
  consistent-this:
    - 2
    - "self"
  no-unused-vars:
    - 2
    - argsIgnorePattern: "^_"
  block-scoped-var: 2
  dot-notation: 2
  eqeqeq: 2
  no-else-return: 1
  no-useless-call: 2
  no-useless-return: 1
  no-shadow: 1
  eol-last: 1
  no-lonely-if: 1
  quote-props:
    - 2
    - "as-needed"
  semi: 2
